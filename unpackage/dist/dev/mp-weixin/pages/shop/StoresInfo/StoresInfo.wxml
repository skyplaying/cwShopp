<view class="page"><block wx:if="{{isok}}"><view class="container"><view class="shopBox"><image class="shopLogo" src="{{storeLogoPictureLink}}" mode="aspectFit"></image><view class="info1"><text class="shopName">{{storeName+"\n"}}</text><text class="address" style="margin-top:20rpx;">{{storeAddress}}</text></view></view><view class="content"><view class="shopDes"><text class="t1">门店名称</text><input class="t2" type="text" value="{{storeName}}" maxlength="20" data-event-opts="{{[['input',[['__set_model',['','storeName','$event',[]]]]]]}}" bindinput="__e"/><image class="toRight" src="../../../static/shop/you.png" mode="aspectFit"></image></view><view class="shopDes"><text class="t1">门店电话</text><input class="t2" type="number" value="{{storePhoneNumber}}" maxlength="13" data-event-opts="{{[['input',[['__set_model',['','storePhoneNumber','$event',[]]]]]]}}" bindinput="__e"/><image class="toRight" src="../../../static/shop/you.png" mode="aspectFit"></image></view><view class="shopDes"><text class="t1">门店负责人电话</text><input class="t2" type="number" value="{{storeManagerPhoneNumber}}" maxlength="13" data-event-opts="{{[['input',[['__set_model',['','storeManagerPhoneNumber','$event',[]]]]]]}}" bindinput="__e"/><image class="toRight" src="../../../static/shop/you.png" mode="aspectFit"></image></view><view class="shopDes"><text class="t1">地址</text><view data-event-opts="{{[['tap',[['chooseAddress',['$event']]]]]}}" class="address" bindtap="__e">{{storeAddress}}</view><image class="toRight" src="../../../static/shop/you.png" mode="aspectFit"></image></view><view class="shopDes"><text class="t1">详细地址</text><input class="address" type="number" value="{{storeDetailedAddress}}" data-event-opts="{{[['input',[['__set_model',['','storeDetailedAddress','$event',[]]]]]]}}" bindinput="__e"/><image class="toRight" src="../../../static/shop/you.png" mode="aspectFit"></image></view><picker mode="time" value="{{date}}" start="09:00" end="21:00" data-event-opts="{{[['change',[['bindDateChange',['$event']]]]]}}" bindchange="__e"><view class="shopDes"><text class="t1">营业时间</text><view class="hour">{{storeBusinessHours}}</view><image class="toRight" src="../../../static/shop/you.png" mode="aspectFit"></image></view></picker><view class="shopDes"><text class="t1">营业状态</text><picker value="{{statusIndex}}" range="{{shopStatusList}}" data-event-opts="{{[['change',[['bindPickerChange',['$event']]]]]}}" bindchange="__e"><view data-event-opts="{{[['tap',[['upShopStatus',['$event']]]]]}}" class="t3" bindtap="__e">{{storeState==1?'营业中':'休息中'}}</view></picker><image class="toRight" src="../../../static/shop/you.png" mode="aspectFit"></image></view></view><view data-event-opts="{{[['tap',[['updateStore',['$event']]]]]}}" class="switchStore" bindtap="__e">修改门店</view><view data-event-opts="{{[['tap',[['switchStore',['$event']]]]]}}" class="switchStore" bindtap="__e">切换店铺</view><uni-popup class="vue-ref" vue-id="1" type="bottom" data-ref="businessHours" bind:__l="__l"></uni-popup></view></block></view>